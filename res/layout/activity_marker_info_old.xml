<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<ScrollView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		
		<LinearLayout 
		 	android:orientation="vertical" 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:id="@+id/linear">
	    
		    <TextView android:id="@+id/marker_info_imageTitle"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:text="Titolo"/>
		    
		    <ImageView 
		        android:id="@+id/marker_info_image"
				android:adjustViewBounds="true"
        		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"/>
		   		    
		    <TextView 
		        android:id="@+id/marker_info_title"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:text="Titolo"/>
		    
		    <TextView 
		        android:id="@+id/marker_info_title_text"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		 
		    <TextView 
		        android:id="@+id/marker_info_description"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:text="Descrizione"/>
		    
		    <TextView 
		        android:id="@+id/marker_info_description_text"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <TextView 
		        android:id="@+id/marker_info_coordinates"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:text="Coordinate"/>
		    
		    <TextView 
		        android:id="@+id/marker_info_coordinates_text"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		     <TextView 
		        android:id="@+id/marker_info_datetime"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:text="Data e ora"/>
		    
		    <TextView 
		        android:id="@+id/marker_info_datetime_text"
	    	    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		 	<RelativeLayout
		        android:id="@+id/btnLayout"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_gravity="fill"
		        android:gravity="center_horizontal" >
			
				<Button
			        android:id="@+id/button_ok"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:onClick="ok"
			        android:text="OK" />
		    
		    </RelativeLayout>    
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
