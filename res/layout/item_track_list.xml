<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"> 

    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
	    
        <TextView android:id="@+id/path_item"
            android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_gravity="left|center_vertical"
        	android:layout_weight="1"
        	android:ellipsize="end"
        	android:gravity="left|center_vertical"
       	 	android:singleLine="true"
    		android:padding="10dp"
    		android:textSize="20sp" />
		
	    <LinearLayout 
			android:id="@+id/linear101"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="right|center"
			android:layout_centerVertical="true"
			android:paddingRight="5dp"
			android:orientation="horizontal" >
			
			<!-- <ImageButton
	            android:id="@+id/button_path_info"
	            android:src="@drawable/about"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:scaleType="centerCrop" 
		        android:layout_gravity="center_vertical"
	            android:onClick="showPathInformation"
	            android:background="@null" />  -->
			
	        <ImageButton
	            android:id="@+id/button_path_save"
	            android:src="@drawable/save_icon"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:scaleType="centerCrop" 
		        android:layout_gravity="center_vertical"
	            android:onClick="exportPath"
	            android:background="@null" />
	        
		    <ImageButton
			    android:id="@+id/button_path_show"
			    android:src="@drawable/show_path_icon"
			    android:layout_width="30dp"
				android:layout_height="30dp"
		        android:scaleType="centerCrop"
		        android:layout_gravity="center_vertical"
		        android:onClick="showPath"
		        android:background="@null" />
			
			<ImageButton
			    android:id="@+id/button_path_delete"
			    android:src="@drawable/delete"
			    android:layout_width="30dp"
				android:layout_height="30dp"
		        android:scaleType="centerCrop"
		        android:layout_gravity="center_vertical"
		        android:onClick="deletePath"
		        android:background="@null" />
			
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>